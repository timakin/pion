<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div class="backgroundColorBluredGray">
				<h2>
					<%= @product.title %>
				</h2>					
				</div>

				<p>
					<%= @product.description %>
				</p>

				<p>
					<strong>Description:</strong>
					<div class="embed-container"><%= embed (@product.videoclip) %></div>

				</p>

				<p>
					<strong>Reference:</strong>
					<%= @product.reference %>
				</p>

				<% if current_user %>
				<%= render 'comments/form' %>
				<% end %>
				<% @product.comments.each do |comment| %>
				<p><%= comment.description %></p>
				<% end %>

				<%= link_to 'Edit', edit_product_path(@product) %> |
				<%= link_to 'Back', products_path %>
			</div>
			<div class="col-md-2"></div>
		</div>
	</div>
</div>
<p id="notice"><%= notice %></p>



